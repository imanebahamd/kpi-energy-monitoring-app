{
  "services": {
    "backend": {
      "path": "./kpi-energy-backend",
      "build": "./mvnw clean package",
      "start": "java -jar target/kpi-energy-backend-0.0.1-SNAPSHOT.jar"
    },
    "ml-service": {
      "path": "./kpi-energy-backend/ml-service",
      "build": "pip install -r requirements.txt",
      "start": "uvicorn main:app --host 0.0.0.0 --port $PORT"
    },
    "frontend": {
      "path": "./kpi-energy-frontend",
      "build": "npm install && npm run build --prod",
      "start": "serve -s dist/kpi-energy-frontend -l $PORT"
    }
  }
}
